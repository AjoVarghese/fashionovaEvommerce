                        <div class="mb-3">
                          <label for="" class="form-label">Product Name</label>
                          <input type="text" class="form-control" id="productname" name="productname" onkeyup="nameCheck()">
                          <div style="display: flex;align-items: flex-start;">
                            <p id="pname" style="color: red;"></p>
                          </div>
                        </div>
                        <div class="mb-3">
                          <label for="" class="form-label">Description</label>
                          <input type="text" class="form-control" id="description" name="description" onkeyup="descriptionCheck()">
                          <div style="display: flex;align-items: flex-start;">
                            <p id="pdesc" style="color: red;"></p>
                          </div>
                        </div>
                        <div class="mb-3">
                          <label for="" class="form-label">Quantity</label>
                          <input type="number" class="form-control" id="quantity" name="quantity" aria-describedby="" onkeyup="quantityCheck()" >
                          <div style="display: flex;align-items: flex-start;">
                            <p id="pqua" style="color: red;"></p>
                          </div>
                        </div>
                        <div class="mb-3">
                            <label for="category" class="form-label">Category</label>

                            <select class="form-select" aria-label="Default select example"  name="category" id="category" value="<%= data.category %>">
                              <% for(var i=0;i<data.length;i++){ %>
                              <option value="<%=data[i]._id %>"><%= data[i].categoryname %></option>
                              <% } %>
                            </select>
                            <div style="display: flex;align-items: flex-start;">
                              <p id="pcat" style="color: red;"></p>
                            </div>
                          </div>
                         
                          <div class="mb-3">
                            <label for="" class="form-label">Price</label>
                            <input type="number" class="form-control" id="price" name="price" onkeyup="priceCheck()">
                            <div style="display: flex;align-items: flex-start;">
                              <p id="pprice" style="color: red;"></p>
                            </div>
                          </div>
                          <div class="mb-3">
                            <label for="image" class="form-label">Upload Image</label>
                            <input type="file" class="form-control" id="productimage" name="productimage" required multiple  onkeyup="productImageCheck()">
                            <div style="display: flex;align-items: flex-start;">
                              <p id="pimage" style="color: red;"></p>
                            </div>
                          </div>
                          
                        
                        <button type="submit" class="btn btn-primary" onclick="return validate()">Submit</button>
                      </form>
                </div>
            </div>
