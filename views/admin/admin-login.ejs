<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Signup</title>
    <link rel="stylesheet" href="stylesheets/signup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="form">
          <div class="sign-in-section">
            <!-- <h6>< FRZ /></h6> -->
            <h1>Admin Login</h1>
            <form action="/admin-login" method="post" id="form" name="f1">
                
                   <% if(loginError){ %>
                    <div class="loginError">
                    <p ><span style="color: rgb(240, 36, 36);">Incorrect Email or password</span> </p>
                  </div>
                  <% } %>
                
              <div class="form-field">
                <label for="email">Email</label>
                <input id="email" type="Email" placeholder="Email" name="email"  onchange="checkEmail()"/>
                <div style="display: flex;align-items: flex-start;">
                  <p id="pemail" style="color: red;"></p>
                </div>
              </div>
              
              <div class="form-field">
                <label for="password">Password</label>
                <input id="password" type="password" placeholder="Password" name="password"  onchange="checkPassword"/>
                <div style="display: flex;align-items: flex-start;">
                  <p id="ppassword" style="color: red;"></p>
                </div>
              </div>
              
              <div class="form-field">
                <input type="submit" class="btn btn-signin" value="Login" onclick="return validate()" />
              </div>
            </form>
          </div>
        </div>
      </div>

      <script>

          function email(){
                          var mailformat = /^\w+([\.-]?\w+)@\w+([\.-]?\w+)(\.\w{2,3})+$/; 
                          if(document.f1.email.value.match(mailformat)){
                              return true;
                          }
                          else{
                              return false;
                          }
                       }

                       function validate(){

                       if(document.f1.email.value===""){
                      document.getElementById("pemail").innerHTML="*fill the form";
                      document.getElementById('pemail').style.color='red'
                      document.getElementById('email').focus;
                      document.getElementById('email').style.borderColor='red'
                      return false;
                  }
                  else if(email()==false)
                  {
                      document.getElementById("pemail").innerHTML="*invalid email";
                      document.getElementById('pemail').style.color='red'
                      document.getElementById('email').focus;
                      document.getElementById('emai;').style.borderColor='red'
                      return false;
                  }


                  else if(document.f1.password.value===""){
                      document.getElementById("ppassword").innerHTML="*Must provide a password";
                      document.getElementById('ppassword').style.color='red'
                      document.getElementById('password').focus;
                      document.getElementById('password').style.borderColor='red'
                      return false;
                  }
                  else if(document.f1.password.value.length < 8){
                      document.getElementById("ppassword").innerHTML="*Password doesn't match";
                      document.getElementById('ppassword').style.color='red'
                      document.getElementById('password').focus;
                      document.getElementById('password').style.borderColor='red'
                      return false;
                  }

              }

              function checkEmail(){
                if(email() == true){
                      document.getElementById("pemail").innerHTML="Valid Email";
                      document.getElementById('pemail').style.color='green'
                      document.getElementById('email').focus;
                      document.getElementById('email').style.borderColor='green'
                  return false
                  }
              }

              function checkPassword(){
                if(document.f1.password.value !=null && document.f1.password.value.length>=8){
                      document.getElementById("ppassword").innerHTML="Valid Password";
                      document.getElementById('ppassword').style.color='green'
                      document.getElementById('password').focus;
                      document.getElementById('password').style.borderColor='green'
                      return false
                  
                  }
              }


      </script>
      

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

</body>
</html>