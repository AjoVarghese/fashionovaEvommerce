      <section>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-bordered text-center">
                        <thead>
                          <tr>
                           
                            <th scope="col">Sl.No</th>
                            <th scope="col">Order ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Image</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                            <th scope="col">Order Status</th>
                            <th scope="col">Ordered Date</th>
                            <th scope="col">User Id</th>
                            <th scope="col">Address</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%for(var i=0;i<orders.length;i++){%>
                            <%orders[i].productDetails.forEach((order) => { %>
                          <tr>
                            
                            <th scope="row"><%=i+1%></th>  
                            <td><%=orders[i]._id%></td>
                            <td><%=order.products.productname%></td>
                            <td><img src="data:Image/<%=order.products.productimage.contentType%>;base64,<%=order.products.productimage.data.toString('base64')%>" style="height: 70%;width: 60%;" alt=""></td>
                            <td><%=orders[i].quantity%></td>
                            <td>Rs.<span><%=order.products.price%></span></td>
                            <td><%=orders[i].status%></td>
                            <td><%=orders[i].date%></td>
                            <td><%=orders[i].userId%></td>
                            <td><p><%=orders[i].deliveryDetails.name%></p>
                              <p><%=orders[i].deliveryDetails.city%></p>
                              <p><%=orders[i].deliveryDetails.street%>
                                <%=orders[i].deliveryDetails.mobile%></p>
                            </td>

                            <td>
                              <a href="/cancel-order?id=<%= orders[i]._id %>">
                                <button class="btn btn-warning"  onclick="return confirm('Are u sure ? This will cancel the order from user')">cancel</button>
                              </a>
                              
                              </td>
                          </tr>
                          <% }) %>
                          <% } %>
                          
                          
                          
                          
                        </tbody>
                      </table>
                </div>
            </div>
