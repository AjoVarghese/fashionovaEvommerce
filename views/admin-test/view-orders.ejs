    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:../../partials/_settings-panel.html -->
      <div class="theme-setting-wrapper">
        <div id="settings-trigger"><i class="ti-settings"></i></div>
        <div id="theme-settings" class="settings-panel">
          <i class="settings-close ti-close"></i>
          <p class="settings-heading">SIDEBAR SKINS</p>
          <div class="sidebar-bg-options selected" id="sidebar-light-theme">
            <div class="img-ss rounded-circle bg-light border mr-3"></div>Light
          </div>
          <div class="sidebar-bg-options" id="sidebar-dark-theme">
            <div class="img-ss rounded-circle bg-dark border mr-3"></div>Dark
          </div>
          <p class="settings-heading mt-2">HEADER SKINS</p>
          <div class="color-tiles mx-0 px-4">
            <div class="tiles success"></div>
            <div class="tiles warning"></div>
            <div class="tiles danger"></div>
            <div class="tiles info"></div>
            <div class="tiles dark"></div>
            <div class="tiles default"></div>
          </div>
        </div>
      </div>
      <!-- partial -->
      <!-- partial:../../partials/_sidebar.html -->
      
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">

            <header>
              <h1>All Orders</h1>
              <p>View all orders from users</p>
            </header>
            <% for(var i = 0 ; i < orders.length;i++){ %>

            <div class="container">

              <div class="heading">
                <div class="odetails-1">
                  <p><b>Order</b></p>
                  <p><%=orders[i]._id %></p>
                </div>
                <div class="odetails-2">
                  <p>Ordered Date:<%= orders[i].date %></p>
                </div>
                <button><i class="fa-solid fa-location-crosshairs" onclick="downloadOrderDetails()"></i>
                    <p>Download Details</p>
                  </button>
              </div>
               
              <hr>
              <% orders[i].productDetails.forEach((order) => {%>
              <div class="card-container" id="orderDetails">
                <div class="card">
                  <div class="img">
                    <img
                      src="<%= order.products.image1 %>"
                      alt="Nike Air Jordan 1">
                  </div>
                  <div class="parent">
                    <div class="content">
                      <div class="details-1">
                        <h1><%=order.products.productname %></h1>
                        <p><%= order.products.description %></p>
                      </div>
                      <div class="details-2">
                        <!-- <p>Size: 10</p> -->
                        <p>Quantity:<%= order.products.itemQuantity %></p>
                        <p><b>Price: <i class="fa-solid fa-indian-rupee-sign"></i> <%= order.products.price %></b></p><br>
                       
                      </div>
                    </div>
                    <div class="status">
                      <div class="sec1">
                        <p>Status</p>
                        <h2><%= orders[i].status %></h2>
                      </div>
                      <div class="sec1">
                        <p>Payment Method</p>
                        <h2><%= orders[i].paymentMethod %></h2>
                      </div>
                      <!-- <div class="sec2">
                        <p>Delivery Expected By</p>
                        <h3><%= orders[i].date %></h3>
                      </div> -->
                    </div>
                    <div class="status">
                      <div class="sec1">
                        <p>Address</p>
                        <h2><%= orders[i].deliveryDetails.name %></h2>
                        <h2><%= orders[i].deliveryDetails.city %></h2>
                        <h2><%= orders[i].deliveryDetails.mobile %></h2>
                      </div>
                    </div>
                  </div>
                </div>
                <hr>
              </div>
              <% }) %>
              
                
              <div class="card-bottom">
                <% if(orders[i].status != 'cancelled' && orders[i].status != 'Deliverd'){ %>
                <button onclick="cancelOrder('<%=orders[i]._id %>','<%= orders[i].userId %>')">❌ CANCEL ORDER</button>
                <% } %>
                <% if(orders[i].status !='Shipped' && orders[i].status != 'cancelled' && orders[i].status != 'Deliverd'){ %>
                <button onclick="shipOrder('<%=orders[i]._id %>')">🚛 SHIPPED</button>
                <% } %>
                <% if(orders[i].status !='Deliverd' && orders[i].status != 'cancelled'){ %>
                <button onclick="delivered('<%=orders[i]._id %>')">🤝 DELIVERED</button>
                <% } %>
                
               
                <h1>Total: <i
                    class="fa-solid fa-indian-rupee-sign"></i><span><%= orders[i].totalAmount[0].total %></span></h1>
                    
              </div>

          
            </div>
                  
             

            <!-- <div class="container align-items-end">
              <div class="row">
                <div class="col-md-4 m-3">
                  <button class="btn btn-primary" onclick="downloadPdf()"><span><i class="bi bi-download"></i></span>
                    Download as pdf</button>
                </div>
              </div>
            </div> -->
            

            <% } %>
            <!-- url:'/cart-decrease?id='+productID +'&quantity=' + qvalue, -->
          <!-- cancel-Order -->
            <script>
              
              function cancelOrder(orderId,userId) {
                $.ajax({
                  url: '/cancel-order',
                  method: 'post',
                  data:{
                    order:orderId,
                    user:userId
                  },
                  success: (response) => {
                    if (response.cancelOrder) {
                      alert('order cancelled')
                      window.location.reload()
                    } else {
                      alert('failed')
                    }
                  }

                })
              }
            </script>


          <!-- Ship-Order -->
            <script>
              function shipOrder(orderId) {
                $.ajax({
                  url: '/ship-order?id=' + orderId,
                  method: 'post',
                  success: (response) => {
                    if (response.shipOrder) {
                      alert('order shipped')
                      window.location.reload()
                    } else {
                      alert('failed')
                    }
                  }

                })
              }
            </script>

             
            <!-- Deliver-Order -->
            <script>
              function delivered(orderId) {
                $.ajax({
                  url: '/deliver-order?id=' + orderId,
                  method: 'post',
                  success: (response) => {
                    if (response.deliveredOrder) {
                      alert('order delivered')
                      window.location.reload()
                    } else {
                      alert('failed')
                    }
                  }
                })
              }
            </script>



          </div>
        </div>

        


