          function downloadOrderDetails() {
            var element = document.getElementById("orderDetails")

            var opt = {
              margin: 0,
              filename: 'orderDetails.pdf',
              image: {
                type: 'jpeg',
                quality: 0.98
              },
              html2canvas: {
                scale: 2
              },
              jsPDF: {
                unit: 'in',
                format: 'letter',
                orientation: 'portrait'
              }
            };

            html2pdf(element,opt)
          }
        </script>
