<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Signup</title>
    <link rel="stylesheet" href="stylesheets/signup.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="form">
          <div class="sign-in-section">
           
            <h1>Login</h1>
            
            <form action="/otp-login" method="post" name="f1" id="f1">
               <% if(mobileError){ %>
              <div class="mobileError">
                <p><span style="color:red;">Enter registered mobile no</span></p>
              </div>
              <% } %>
                 
              <div class="form-field">
                <label for="mobile">Mobile No</label>
                <input id="mobile" type="text" placeholder="Registered Mobile no" name="mobile" onchange="mobileCheck()"/>
              </div>
              
              <div class="form-field">
                <input type="submit" class="btn btn-signin" value="Request OTP" onclick="return validate()"/>
              </div>
            </form>
            <!-- <div class="otp">
               
                <a href="/otp-login" style="text-decoration: none;color:  #7F00FF;">Resend OTP</a> 
              </div> -->
            <div class="links">
              
              <a href="/signup" style="text-decoration: none;color: black;">Don't have an account? <span style="color: #7F00FF">Sign up</span> </a> 
            </div>
            
            
          </div>
        </div>
      </div>

      <script>
             function validate(){

               if(document.f1.mobile.value===""){
                      document.getElementById("pmob").innerHTML="*Must provide a mobile no";
                      document.getElementById('pmob').style.color='red'
                      document.getElementById('inpm').focus;
                      document.getElementById('inpm').style.borderColor='red'
                      return false;
                  }
                  else if(document.f1.mobile.value.length<10){
                      document.getElementById("pmob").innerHTML="*Phone number must have 10 digits ";
                      document.getElementById('pmob').style.color='red'
                      document.getElementById('inpm').focus;
                      document.getElementById('inpm').style.borderColor='red'
                      return false;
                  }

             }

             function mobileCheck(){
                if(document.f1.mobile.value !=null && document.f1.mobile.value.length==10){
                      document.getElementById("pmob").innerHTML="Valid Mobile no";
                      document.getElementById('pmob').style.color='green'
                      document.getElementById('inpm').focus;
                      document.getElementById('inpm').style.borderColor='green'
                      return false
                  
                  }
              }



      </script>
</body>
</html>